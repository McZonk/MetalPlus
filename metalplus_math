#ifndef __METALPLUS_MATH
#define __METALPLUS_MATH

#include "metalplus_types"

METALPLUS_NAMESPACE_BEGIN

using namespace metal;

METAL_FUNC template<typename T> T maxComponent(vec<T, 2> v) {
	return max(v[0], v[1]);
}

METAL_FUNC template<typename T> T maxComponent(vec<T, 3> v) {
	return max(v[0], max(v[1], v[2]));
}

METAL_FUNC template<typename T> T maxComponent(vec<T, 4> v) {
	vec<T, 2> v2 = max(vec<T, 2>(v[0], v[1]), vec<T, 2>(v[2], v[3]));
	return max(v2[0], v2[1]);
}

METAL_FUNC template<typename T>

METALPLUS_NAMESPACE_END

#endif /* __METALPLUS_MATH */
